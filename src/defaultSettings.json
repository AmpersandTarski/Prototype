// JSON with comments
{
    "global.serverURL": "http://localhost", // set the base url for the application
    "global.apiPath": "/api/v1", // relative path to api
    "global.sessionExpirationTime": 3600, // expiration time in seconds
    "global.productionEnv": false, // set environment as production deployment (or not = default)
    "global.debugMode": false, // set debugMode (or not = default). Impacts the way errors are returned by API
    "global.absolutePath": "<TODO>",
    "global.uploadPath": "uploads/",
    "global.logPath": "log/",
    "global.allowedMimeTypes":
        [ "application/vnd.ms-excel"
        , "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet"
        , "application/excel"
        , "application/pdf"
        , "text/xml"
        ],
    "global.allowedRolesForImporter": null, // implies that everyone has access
    "global.loginEnabled": false, // enable/disable login functionality (requires Ampersand script, see localSettings.php)

    // Transaction settings
    "transactions.ignoreInvariantViolations": false, // for debugging can be set to true (transactions will be committed regardless off invariant violations)
    "transactions.skipUniInjConjuncts": false, // TODO: remove after fix for issue #535
    "transactions.interfaceAutoCommitChanges": true, // specifies whether changes in an interface are automatically commited when allowed (all invariants hold)
    "transactions.interfaceAutoSaveChanges": true, // specifies whether changes in interface are directly communicated (saved) to server
    
    // Default CRUD rights for interfaces
    "transactions.defaultCrudC": true,
    "transactions.defaultCrudR": true,
    "transactions.defaultCrudU": true,
    "transactions.defaultCrudD": true,

    // Default notification settings
    "notifications.defaultShowSignals": true,
    "notifications.defaultShowInfos": true,
    "notifications.defaultShowWarnings": true,
    "notifications.defaultShowSuccesses": true,
    "notifications.defaultAutoHideSuccesses": true,
    "notifications.defaultShowErrors": true,
    "notifications.defaultShowInvariants": true,

    // ExecEngine settings
    "execengine.EngineRoleNames": ["ExecEngine"],
    "execEngine.autoRerun": true,
    "execEngine.maxRunCount": 10
}
